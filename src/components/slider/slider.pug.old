mixin Slider({modifier=''})
	div(class=`${prefix}-slider`)
		ul(class=`${prefix}-slider__list`)
			li(class=`${prefix}-slider__list-item ${prefix}-slider__list-item--hide`)
			li(class=`${prefix}-slider__list-item ${prefix}-slider__list-item--prev`)
			li(class=`${prefix}-slider__list-item ${prefix}-slider__list-item--act`)
			li(class=`${prefix}-slider__list-item ${prefix}-slider__list-item--next`)
			li(class=`${prefix}-slider__list-item ${prefix}-slider__list-item--new-next`)
		div(class=`${prefix}-slider__swipe`)
